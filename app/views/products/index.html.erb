<div class="container">

  <h1 class="text-center">产品列表</h1><br>

  <div class="row">
    <div class="dropdown  pull-right">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
          排序
          <span class="caret"></span>
        </button>
        <ul class="reorder dropdown-menu ">
          <li><%= link_to("综合排序", products_path) %></li>
          <li><%= link_to("价格从低到高", products_path(:order => "by_lower_price")) %></li>
          <li><%= link_to("价格从高到低", products_path(:order => "by_upper_price")) %></li>
        </ul>
    </div>

  </div>




  <div class="productList">
    <% @products.each do |product| %>
      <div class="col-xs-6 col-md-3">
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
        <p><%= product.title %> ￥<%= product.price %></p>
      </div>
    <% end %>

  </div>

</div>
