<div class="product-box">
  <div class="container">

    <%= image_tag("bottom1.jpg", class: "background-image") %>

    <%= render "products/menu" %>

    <!--=== 商品列表 ===-->
    <div class="row">

      <% @products.each_with_index do |product, index| %>
        <div class='col-xs-4 col-md-3 product-content'>

          <div class="product-info all_image_css">
            <%= link_to product_path(product) do %>
              <!-- 商品圖片 -->
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
            <p><%= link_to(product.title , product_path(product)) %></p>
            <p>
              <% if product.discount.present? %>
                ￥<%= product.price = product.price * product.discount/100 %>
              <% else %>
                ￥<%= product.price %>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
