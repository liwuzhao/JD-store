<!-- 判断是否在首页,首页使用 id="navbar" -->
<% if current_page?('/') %>
  <nav class="navbar navbar-default navbar-fixed-top" id="navbar" style="padding-left:15%" role="navigation">
<% else %>
<!-- 非首页使用 class="show_bgcolor" -->
  <nav class="navbar navbar-default navbar-fixed-top show_bgcolor" style="padding-left:15%" role="navigation">
<% end %>
      <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
              <!-- <a class="navbar-brand" href="/">Fitness </a> -->
              <a class="navbar-brand" href="/"><img src='<%= image_url 'icon1.png' %>' >Fitness</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      产品
                      <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to("所有产品", products_path) %></li>
                    <% Category.all.each do |category| %>
                      <li>
                        <%= link_to(category.name, products_path(category: category)) %>
                     </li>
                    <% end %>
                  </ul>
                </li>

              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <li>
                     <li>
                        <%= link_to carts_path do  %>
                           购物车 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
                        <% end %>
                     </li>
                   <% if !current_user %>
                     <li><%= link_to("注册", new_user_registration_path) %> </li>
                     <li><%= link_to(content_tag(:i, '登入', class: 'fa fa-sign-in'), new_user_session_path) %></li>
                   <% else %>
                     <li class="dropdown">
                       <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                           Hi!, <%= current_user.nickname %>
                           <b class="caret"></b>
                       </a>
                       <ul class="dropdown-menu">
                        <% if current_user.admin? %>
                          <li><%= link_to("管理员面板", admin_products_path) %> </li>
                        <% end %>
                          <li> <%= link_to("账户信息", edit_account_user_path(current_user)) %></li>
                          <li> <%= link_to("个人订单", account_orders_path) %></li>
                          <li> <%= link_to("个人收藏", account_products_path) %></li>
                          <li> <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %> </li>
                       </ul>
                     </li>
                   <% end %>
                  </li>
              </ul>

              <div class="nav navbar-nav navbar-right">
                <%= form_tag search_products_path , :method => :get do %>
                  <div class="input-group search-form-group">
                    <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索课程">
                    <div class="input-group-btn">
                      <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>

          </div>
      </div>
  </nav>
